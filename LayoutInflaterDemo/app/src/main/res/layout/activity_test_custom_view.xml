<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.angine.www.layoutinflaterdemo.customview.TestCustomView">

    <com.angine.www.layoutinflaterdemo.customview.CustomImageView
        android:id="@+id/img_launcher"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@mipmap/ic_launcher"
        tools:layout_editor_absoluteX="80dp"
        android:layout_marginTop="67dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_click" />

    <Button
        android:id="@+id/btn_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_getSize"
        tools:layout_editor_absoluteY="41dp"
        tools:layout_editor_absoluteX="126dp" />

</android.support.constraint.ConstraintLayout>
